{% extends "@GlynnTemplate/admin.html.twig" %}

{% block header_user_menu %}
    {% if app.user %}
        <div class="dropdown float-end">
            <a data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="btn text-muted">
                <i class="fa fa-chevron-down"></i>
            </a>
            <div class="dropdown-menu dropdown-menu-right">
                <a class="dropdown-item" href="{{ path('app_logout') }}">
                    <i class="fa fa-sign-out-alt"></i> {{ 'admin.nav.logout' | trans }}
                </a>
            </div>
        </div>
        <div class="sidebar-user">
            <div class="d-flex gap-2">
                <div>
                    <img src="{{ app.user.avatar }}"
                         class="rounded img-fluid sidebar-user-img pr-3"
                         alt="{{ 'admin.nav.profile_image' | trans }}">
                </div>
                <div>
                    <strong class="media-heading">
                        {{ app.user.username }}
                    </strong>
                    <div>
                        {{ app.user.email }}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
